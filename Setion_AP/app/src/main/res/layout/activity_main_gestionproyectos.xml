<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/screen_background"
    tools:context=".Main_GestionProyectos">


    <FrameLayout
        android:id="@+id/frame_logo_MAINGP"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/img_logoTec_MAINGP"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logotec2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            >

        </ImageView>

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_logo_MAINGP"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCreacionDeProyectos_MAINGP"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/btn_blue"
            android:text="Creaci贸n de proyectos">

        </Button>

        <Button
            android:id="@+id/btnConsultaDeProyectos_MAINGP"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/btn_blue"
            android:text="Consulta de proyectos">

        </Button>

        <Button
            android:id="@+id/btnModificacionDeInformacion_MAINGP"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/btn_blue"
            android:text="Modificaci贸n de informaci贸n">

        </Button>

        <Button
            android:id="@+id/btnCreacionDeReuniones_MAINGP"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/btn_blue"
            android:text="Creaci贸n de reuniones">

        </Button>

        <Button
            android:id="@+id/btnAtras_MAINGP"
            android:layout_width="202dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/btn_blue"
            android:text="Atras">

        </Button>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>