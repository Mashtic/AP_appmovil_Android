<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".APP.GestionColaboradores.Asignaciones.AsignarProyecto">


    <!--LOGO TEC-->
    <FrameLayout
        android:id="@+id/frame_logo_ACASIGNACION"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/img_logoTec_ACASIGNACION"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logotec2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            >
        </ImageView>

    </FrameLayout>

    <!--Pantalla del medio-->
    <ListView
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints"
        android:id="@+id/lvProyectos_ACASIGNACION1"
        android:dividerHeight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/frame_logo_ACASIGNACION"
        app:layout_constraintBottom_toTopOf="@+id/frame_botones_ACASIGNACION"/>

    <!--BOTON ATRAS-->
    <FrameLayout
        android:id="@+id/frame_botones_ACASIGNACION"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:layout_margin="10dp"
                android:id="@+id/btnAtras_ACASIGNACION"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/btn_blue"
                android:text="Atras"/>
        </LinearLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

