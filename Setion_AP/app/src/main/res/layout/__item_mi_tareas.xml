<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:background="@color/screen_background"
    app:cardCornerRadius="20dp">



    <androidx.cardview.widget.CardView
        android:id="@+id/i__cardView__MI2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:backgroundTint="@color/btn_gray_selected"
        app:cardCornerRadius="20dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/editar" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/i__textViewEncargado__MI2_tittle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Encargado: "
        app:layout_constraintEnd_toStartOf="@+id/i__cardView__MI2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/i__textViewEncargado__MI2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/i__cardView__MI2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/i__textViewEncargado__MI2_tittle" />


    <TextView
        android:id="@+id/i__textViewDescripcion__MI2_tittle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n: "
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/i__textViewEncargado__MI2"
        app:layout_constraintEnd_toStartOf="@+id/i__cardView__MI2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/i__textViewDescripcion__MI2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/i__cardView__MI2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/i__textViewDescripcion__MI2_tittle"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>