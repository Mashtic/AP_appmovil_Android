<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="14dp"
    android:backgroundTint="@color/screen_background"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Nombre proyecto"
            android:id="@+id/i__tvNombreProyecto__ACASIGNACION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/btn_blue"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="@color/btn_gray"
            app:cardCornerRadius="20dp"
            android:layout_margin="12dp">

            <TextView
                android:layout_marginHorizontal="12dp"
                android:id="@+id/i__tvDescripcion__ACASIGNACION"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n: "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/i__btnGestionar__ACASIGNACION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestionar participantes"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>