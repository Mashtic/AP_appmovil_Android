<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".APP.Evaluaciones.Foros.E_F_UsarForo_p1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_logo_UF"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame_logo_UF"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/img_logoTec_UF"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logotec2"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                >

            </ImageView>

        </FrameLayout>
        <FrameLayout
            android:id="@+id/frame_titulo_UF"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/screen_background"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintTop_toBottomOf="@+id/frame_logo_UF">
            >
            <TextView
                android:textStyle="bold"
                android:textSize="24dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecione opciÃ³n"/>

        </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="12dp"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btnForoGeneral_UF"
                android:layout_width="176dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:backgroundTint="@color/btn_blue"
                android:text="Foro general" />

            <Button
                android:id="@+id/btnForoPrivado_UF"
                android:layout_width="176dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="Foro privado"
                android:backgroundTint="@color/btn_blue"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnAtras_UF"
            android:layout_width="176dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:text="Atras"
            android:backgroundTint="@color/btn_gray"/>
    </LinearLayout>
</ScrollView>